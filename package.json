{
  "name": "aurora",
  "version": "1.0.0",
  "description": "Real time updates on your favorite cryptocurrencies!",
  "main": "main.js",
  "author": "Brandon Ore",
  "homepage": "http://github.com/brandonore/aurora",
  "license": "MIT",
  "repository": "https://github.com/brandonore/aurora",
  "build": {
    "appId": "com.electron.aurora",
    "productName": "aurora",
    "publish": [
      {
        "provider": "github",
        "repo": "aurora",
        "owner": "brandonore"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE",
      "runAfterFinish": true
    },
    "portable": {
      "requestExecutionLevel": "user"
    }
  },
  "scripts": {
    "pack": "build --dir",
    "dist": "build --arch all",
    "postinstall": "install-app-deps",
    "start": "electron ."
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.13",
    "electron-updater": "^2.18.0",
    "open": "0.0.5",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "electron": "1.7.10",
    "electron-builder": "^19.50.0"
  }
}
